---
import { Image } from "astro:assets";
import Divider from "../bases/divider.astro";
import type { CollectionEntry } from "astro:content";
import { render } from "astro:content";
import { categoriesHandler } from "@/lib/handlers/categories";

type Props = {
  article: CollectionEntry<"articles">;
  index: number;
};

const { article, index } = Astro.props;

const { remarkPluginFrontmatter } = await render(article);
const category = categoriesHandler.oneCategory(article.data.category.id);
---

<article class="group flex flex-col gap-3 h-full relative isolate bg-base-100 rounded-lg overflow-hidden">
  <a href={`/articles/${article.id}`} class="block aspect-video overflow-hidden">
    <Image
      src={article.data.cover}
      alt={article.data.covert_alt ? article.data.covert_alt : article.data.title}
      loading={index < 3 ? "eager" : "lazy"}
      layout="constrained"
      class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
    />
  </a>
  
  <div class="flex flex-col flex-1 px-4 pb-4">
    <div class="flex items-center text-xs text-base-content/70 gap-2 mb-2">
      <span class="text-primary dark:text-secondary font-medium uppercase tracking-wide">
        {category.data.title}
      </span>
      <Divider />
      <span>{remarkPluginFrontmatter.minutesRead}</span>
    </div>
    
    <h3 class="text-lg font-semibold leading-tight mb-2 group-hover:text-rose-500 dark:group-hover:text-purple-400 transition-colors line-clamp-2">
      <a href={`/articles/${article.id}`}>
        <span class="absolute inset-0 z-10 pointer-events-none"></span>
        {article.data.title}
      </a>
    </h3>
    
    <p class="text-sm text-base-content/80 line-clamp-2 flex-1">
      {article.data.description}
    </p>
  </div>
</article>
