---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import { render } from "astro:content";
import Divider from "@/components/bases/divider.astro";
import { categoriesHandler } from "@/lib/handlers/categories";
import { authorsHandler } from "@/lib/handlers/authors";
import { tagsHandler } from "@/lib/handlers/tags";
import { formatDate, normalizeDate } from "@/lib/utils/date";

type Props = {
  article: CollectionEntry<"articles">;
};

const { article } = Astro.props;

const { remarkPluginFrontmatter } = await render(article);
const category = categoriesHandler.oneCategory(article.data.category.id);
const authors = authorsHandler.getAuthors(article.data.authors);
const authorName = authors?.[0]?.data?.name || "Author";
const publishDate = formatDate(
  normalizeDate(article.data.publishedTime),
  "short"
);
const tags = (article.data.tags ?? []).map(tag => tagsHandler.oneTag(tag.id));
---

<article
  data-parallax-card
  class="group relative isolate"
>
  <div
    class="parallax-inner grid grid-cols-1 lg:grid-cols-2 gap-6 items-start overflow-hidden bg-[color:var(--color-base-100)] shadow-[var(--shadow-soft)]"
  >
  <!-- Featured Image - Left Side -->
  <a
    href={`/articles/${article.id}`}
    class="relative z-0 block aspect-video overflow-hidden bg-[color:var(--bg-subtle)] order-last lg:order-first"
    data-skeleton
  >
    <Image
      src={article.data.cover}
      alt={article.data.covert_alt
        ? article.data.covert_alt
        : article.data.title}
      layout="constrained"
      loading="eager"
      format={"avif"}
      class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
    />
  </a>

  <!-- Content - Right Side -->
  <div class="relative z-10 flex flex-col gap-3 justify-start py-4 px-3 sm:px-4 md:px-6">
    <!-- Category & Meta -->
    <div class="flex items-center text-xs text-[color:var(--text-secondary)] gap-2">
      <span
        class="text-[color:var(--primary)] font-medium uppercase tracking-wide"
      >
        {category.data.title}
      </span>
      <Divider />
      <span>{remarkPluginFrontmatter.minutesRead}</span>
    </div>

    <!-- Title -->
    <h3
      class="text-base md:text-lg font-semibold leading-snug text-[color:var(--text-primary)]"
    >
      <a href={`/articles/${article.id}`} class="text-[color:var(--text-primary)] hover:text-[color:var(--text-primary)] focus-visible:text-[color:var(--text-primary)]">
        <span class="absolute inset-0 z-10 pointer-events-none"></span>
        {article.data.title}
      </a>
    </h3>

    <!-- Description -->
    <p
      class="text-sm md:text-base text-[color:var(--text-muted)] leading-relaxed line-clamp-2"
    >
      {article.data.description}
    </p>

    <!-- Tags -->
    {tags.length > 0 && (
      <div class="flex flex-wrap gap-2 mt-2">
        {tags.slice(0, 3).map((tag) => (
          <a
            href={`/tags/${tag.data.path}`}
            class="text-xs px-2 py-1 rounded-full bg-[color:color-mix(in_oklab,var(--primary)_20%,transparent)] text-[color:var(--primary)] hover:bg-[color:color-mix(in_oklab,var(--primary)_30%,transparent)] transition-colors font-medium"
          >
            {tag.data.title}
          </a>
        ))}
      </div>
    )}

    <!-- Author & Date -->
    <div class="mt-auto pt-3 border-t border-[color:var(--border-color)]">
      <p class="text-xs md:text-xs text-[color:var(--text-tertiary)] tracking-wide">
        {authorName}
      </p>
      <p class="text-xs md:text-xs text-[color:var(--text-tertiary)]">{publishDate}</p>
    </div>
  </div>
  </div>
</article>

<style>
  [data-parallax-card] {
    transition: box-shadow 200ms ease;
  }

  [data-parallax-card] .parallax-inner {
    box-shadow: 0 12px 32px color-mix(in oklab, var(--shadow-soft) 50%, transparent);
    transition: box-shadow 200ms ease, transform 200ms ease;
  }

  [data-parallax-card]:hover .parallax-inner {
    box-shadow: 0 24px 48px color-mix(in oklab, var(--shadow-soft) 70%, transparent);
    transform: translateY(-6px);
  }

  @media (prefers-reduced-motion: reduce) {
    [data-parallax-card] .parallax-inner {
      transition: none;
    }
  }
</style>
