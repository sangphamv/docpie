---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import { render } from "astro:content";
import Divider from "@/components/bases/divider.astro";
import { categoriesHandler } from "@/lib/handlers/categories";
import { authorsHandler } from "@/lib/handlers/authors";
import { formatDate, normalizeDate } from "@/lib/utils/date";

type Props = {
  article: CollectionEntry<"articles">;
};

const { article } = Astro.props;

const { remarkPluginFrontmatter } = await render(article);
const category = categoriesHandler.oneCategory(article.data.category.id);
const authors = authorsHandler.getAuthors(article.data.authors);
const authorName = authors?.[0]?.data?.name || "Author";
const publishDate = formatDate(
  normalizeDate(article.data.publishedTime),
  "short"
);
---

<article
  data-parallax-card
  class="group relative isolate"
>
  <div
    class="parallax-inner grid grid-cols-1 lg:grid-cols-2 gap-6 items-start overflow-hidden bg-[color:var(--bg-surface)]"
  >
  <!-- Featured Image - Left Side -->
  <a
    href={`/articles/${article.id}`}
    class="relative z-0 block aspect-video overflow-hidden bg-[color:var(--bg-subtle)] order-last lg:order-first"
    data-skeleton
  >
    <Image
      src={article.data.cover}
      alt={article.data.covert_alt
        ? article.data.covert_alt
        : article.data.title}
      layout="constrained"
      loading="eager"
      format={"avif"}
      class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
    />
  </a>

  <!-- Content - Right Side -->
  <div class="relative z-10 flex flex-col gap-3 justify-start py-4 px-3 sm:px-4 md:px-6">
    <!-- Category & Meta -->
    <div class="flex items-center text-xs text-base-content/70 gap-2">
      <span
        class="text-[color:var(--primary)] font-medium uppercase tracking-wide"
      >
        {category.data.title}
      </span>
      <Divider />
      <span>{remarkPluginFrontmatter.minutesRead}</span>
    </div>

    <!-- Title -->
    <h2
      class="text-base md:text-lg lg:text-xl font-bold leading-snug group-hover:text-[color:var(--accent)] transition-colors"
    >
      <a href={`/articles/${article.id}`}>
        <span class="absolute inset-0 z-10 pointer-events-none"></span>
        {article.data.title}
      </a>
    </h2>

    <!-- Description -->
    <p
      class="text-sm md:text-base text-base-content/80 leading-relaxed line-clamp-2"
    >
      {article.data.description}
    </p>

    <!-- Author & Date -->
    <div class="mt-auto pt-3 border-t border-base-300">
      <p class="text-xs md:text-xs text-base-content/60 tracking-wide">
        {authorName}
      </p>
      <p class="text-xs md:text-xs text-base-content/60">{publishDate}</p>
    </div>
  </div>
  </div>
</article>

<style>
  [data-parallax-card] {
    transition: box-shadow 200ms ease;
  }

  [data-parallax-card] .parallax-inner {
    box-shadow: 0 12px 32px color-mix(in oklab, var(--shadow-soft) 50%, transparent);
    transition: box-shadow 200ms ease, transform 200ms ease;
  }

  [data-parallax-card]:hover .parallax-inner {
    box-shadow: 0 24px 48px color-mix(in oklab, var(--shadow-soft) 70%, transparent);
    transform: translateY(-6px);
  }

  @media (prefers-reduced-motion: reduce) {
    [data-parallax-card] .parallax-inner {
      transition: none;
    }
  }
</style>
