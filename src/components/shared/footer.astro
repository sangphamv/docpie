---
import { SOCIAL_LINKS, SITE, OTHER_LINKS } from "@/lib/config";
import Icon from "../bases/icon.astro";
import { categoriesHandler } from "@/lib/handlers/categories";
import { tagsHandler } from "@/lib/handlers/tags";

const categories = categoriesHandler.allCategoriesWithLatestArticles();
const tags = tagsHandler.allTagsWithCount();
---

<footer
  class="py-12 bg-base-200 text-base-content transition-colors"
>
  <div class="container space-y-8">
    <div class="grid gap-6 lg:grid-cols-3">
      <!-- Categories column split into 2 sub-columns -->
      <section
        class="rounded-box bg-transparent p-6 text-base-content transition-colors"
      >
        <div class="flex items-center mb-4">
          <h3 class="font-bold text-sm uppercase tracking-wider">Danh mục</h3>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 text-sm">
          {categories.map((category) => (
            <a
              href={`/categories/${category.data.path}/1`}
              class="flex items-center rounded-lg px-3 py-2 text-base-content transition-colors hover:bg-primary/10 hover:text-primary"
            >
              <span class="font-medium">{category.data.title}</span>
            </a>
          ))}
        </div>
      </section>

      <!-- Tags column -->
      <section
        class="rounded-box bg-transparent p-6 text-base-content transition-colors"
      >
        <div class="flex items-center mb-4">
          <h3 class="font-bold text-sm uppercase tracking-wider">Thẻ</h3>
        </div>
        <div class="flex flex-wrap gap-2">
          {tags.map((tag) => (
            <a
              href={`/tags?tag=${tag.data.path}`}
              class="badge badge-primary transition-colors hover:brightness-110"
            >
              <span>{tag.data.title}</span>
            </a>
          ))}
        </div>
      </section>

      <!-- Other links split into 2 sub-columns -->
      <section
        class="rounded-box bg-transparent p-6 text-base-content transition-colors"
      >
        <div class="flex items-center justify-between mb-4">
          <h3 class="font-bold text-sm uppercase tracking-wider">Liên kết</h3>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 text-sm">
          {OTHER_LINKS.map(({ href, text }) => (
            <a
              href={href}
              class="flex items-center rounded-lg px-3 py-2 text-base-content transition-colors hover:bg-primary/10 hover:text-primary"
            >
              <span class="font-medium">{text}</span>
            </a>
          ))}
        </div>
      </section>
    </div>

    <div class="pt-8 opacity-70">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-sm">
          © {new Date().getFullYear()} {SITE.title}. All rights reserved.
        </p>
        <div class="flex items-center gap-4">
          {SOCIAL_LINKS.map(({ href, icon, text }) => (
            <a
              href={href}
              target="_blank"
              aria-label={text}
              class="transition-colors text-base-content hover:text-primary"
            >
              <Icon icon={icon} />
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>
</footer>
