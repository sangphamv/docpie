---
import { NAVIGATION_LINKS, SOCIAL_LINKS, OTHER_LINKS } from "@/lib/config";
import Icon from "../bases/icon.astro";
import { CONSTANTS } from "@/lib/config";
import { SITE } from "@/lib/config";
---

<footer class="bg-base-300/30 border-t border-base-300 py-12">
  <div class="container">
    <!-- Footer Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-8 mb-8">
      <!-- Categories Columns -->
      <div>
        <h3 class="font-bold text-sm uppercase tracking-wider mb-4">ARCHITECTURE</h3>
        <ul class="space-y-2 text-sm">
          {NAVIGATION_LINKS.slice(0, 5).map(({ href, text }) => (
            <li><a href={href} class="hover:text-primary transition-colors">{text}</a></li>
          ))}
        </ul>
      </div>
      
      <div>
        <h3 class="font-bold text-sm uppercase tracking-wider mb-4">ENGINEERING</h3>
        <ul class="space-y-2 text-sm">
          {NAVIGATION_LINKS.slice(5, 10).map(({ href, text }) => (
            <li><a href={href} class="hover:text-primary transition-colors">{text}</a></li>
          ))}
        </ul>
      </div>
      
      <div>
        <h3 class="font-bold text-sm uppercase tracking-wider mb-4">OPERATIONS</h3>
        <ul class="space-y-2 text-sm">
          {NAVIGATION_LINKS.slice(10, 15).map(({ href, text }) => (
            <li><a href={href} class="hover:text-primary transition-colors">{text}</a></li>
          ))}
        </ul>
      </div>
      
      <div>
        <h3 class="font-bold text-sm uppercase tracking-wider mb-4">CHANNELS</h3>
        <ul class="space-y-2 text-sm">
          <li><a href="/articles" class="hover:text-primary transition-colors">Podcasts</a></li>
          <li><a href="/articles" class="hover:text-primary transition-colors">Ebooks</a></li>
          <li><a href="/articles" class="hover:text-primary transition-colors">Events</a></li>
          <li><a href="/articles" class="hover:text-primary transition-colors">Webinars</a></li>
          <li><a href="/articles" class="hover:text-primary transition-colors">Newsletter</a></li>
        </ul>
      </div>
      
      <div>
        <h3 class="font-bold text-sm uppercase tracking-wider mb-4">RESOURCES</h3>
        <ul class="space-y-2 text-sm">
          {OTHER_LINKS.map(({ href, text }) => (
            <li><a href={href} class="hover:text-primary transition-colors">{text}</a></li>
          ))}
        </ul>
      </div>
    </div>
    
    <!-- Bottom Bar -->
    <div class="border-t border-base-300 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-sm text-base-content/60">
          Â© {new Date().getFullYear()} {SITE.title}. All rights reserved.
        </p>
        <div class="flex items-center gap-4">
          {SOCIAL_LINKS.map(({ href, icon, text }) => (
            <a href={href} target="_blank" aria-label={text} class="hover:text-primary transition-colors">
              <Icon icon={icon} />
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>
</footer>
