---
import Search01 from "@/assets/svgs/search-01.astro";
import MenuDropdown from "./menu-dropdown.astro";
import { SITE } from "@/lib/config";
import ThemeController from "../bases/theme-controller.astro";

const docPart = SITE.title.substring(0, 3);
const piePart = SITE.title.substring(3);
---

<header class="border-b border-[color:var(--border-color)] bg-[color:var(--bg-page)]">
  <div class="container py-4">
    <div class="flex items-center justify-between">
      <!-- Left: Menu Button -->
      <MenuDropdown />
      
      <!-- Center: Logo -->
      <a
        class="flex-1 text-center text-2xl lg:text-4xl font-serif font-black uppercase tracking-[-0.05em]"
        href="/"
      >
        <span class="text-rose-400 dark:text-cyan-400">{docPart}</span><span class="text-pink-400 dark:text-indigo-400">{piePart}</span>
      </a>
      
      <!-- Right: Search + Theme -->
      <div class="flex items-center gap-2">
        <a class="btn btn-ghost btn-sm btn-circle text-[color:var(--text-primary)] hover:bg-[color:color-mix(in_oklab,var(--primary)_12%,transparent)] hover:text-[color:color-mix(in_oklab,var(--primary)_70%,var(--text-primary)_30%)]" href="/search" aria-label="Search">
          <Search01 />
        </a>
        <ThemeController />
      </div>
    </div>
  </div>
</header>
