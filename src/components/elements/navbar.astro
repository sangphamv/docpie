---
import { NAVIGATION_LINKS } from "@/lib/config";
import NavbarItem from "../bases/navbar-item.astro";
import { CONSTANTS } from "@/lib/config";
---

<nav class="navbar-center hidden lg:flex container">
  <ul class="menu menu-md menu-horizontal px-1 mx-auto uppercase font-medium text-sm gap-6 text-base-content">
    <NavbarItem item={{ href: "/", text: CONSTANTS.Homepage }} />
    <NavbarItem item={{ href: "/articles", text: CONSTANTS.Articles }} />
    {NAVIGATION_LINKS.slice(0, 6).map((item) => <NavbarItem item={item} />)}
  </ul>
</nav>
