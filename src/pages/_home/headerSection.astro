---
import ArrowRight02 from "@/assets/svgs/arrow-right-02.astro";

type Props = {
  title: string;
  link_title: string;
  link_url: string;
};

const { title, link_title, link_url } = Astro.props;
---

<div class="flex items-center justify-between" data-pagefind-ignore="all">
  <h2 class="text-xl md:text-2xl font-serif font-bold text-[color:var(--text-primary)]">
    {title}
  </h2>
  <a
    href={link_url}
    class="flex items-center gap-1 text-sm text-[color:var(--text-muted)] group"
  >
    <span
      class="transition-all group-hover:text-[color:color-mix(in_oklab,var(--primary)_70%,var(--text-primary)_30%)]"
    >
      {link_title}
    </span>
    <span
      class="group-hover:translate-x-0.5 transition-all group-hover:text-[color:color-mix(in_oklab,var(--primary)_70%,var(--text-primary)_30%)]"
      ><ArrowRight02 /></span
    >
  </a>
</div>
