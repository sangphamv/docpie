---
import { articlesHandler } from "@/lib/handlers/articles";
import { categoriesHandler } from "@/lib/handlers/categories";
import { render } from "astro:content";

const allCategories = categoriesHandler.allCategories();
const allArticles = articlesHandler.allArticles();

// Get articles for each category
const categoryColumns = allCategories.slice(0, 4).map((category) => {
  const categoryArticles = allArticles
    .filter((article) => article.data.category.id === category.id)
    .slice(0, 5);
  return {
    category,
    articles: categoryArticles,
  };
});
---

<section class="container py-12" data-pagefind-ignore="all">
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
    {
      categoryColumns.map((column) => (
        <div class="space-y-4">
          <h2
            class="text-xl md:text-2xl font-serif font-bold text-base-content border-b border-base-300 pb-2"
          >
            {column.category.data.title}
          </h2>
          <ul class="space-y-4">
            {column.articles.map(async (article) => {
              const { remarkPluginFrontmatter } = await render(article);
              return (
                <li class="group">
                  <a
                    href={`/articles/${article.id}`}
                    class="flex items-start gap-3"
                  >
                    <h3
                      class="text-sm font-medium line-clamp-2 text-base-content transition-colors group-hover:text-primary"
                    >
                      {article.data.title}
                    </h3>
                  </a>
                </li>
              );
            })}
          </ul>
        </div>
      ))
    }
  </div>
</section>
