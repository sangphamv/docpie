---
import { articlesHandler } from "@/lib/handlers/articles";
import { CONSTANTS } from "@/lib/config";

const eventArticles = articlesHandler.allArticles().slice(0, 4);
---

<section
  class="py-12 bg-[color:color-mix(in_oklab,var(--bg-surface)_88%,var(--accent)_12%)] text-[color:var(--text-primary)] transition-colors"
  data-pagefind-ignore="all"
>
  <div class="container">
    <h2
      class="text-xl md:text-2xl font-serif font-bold text-[color:var(--text-primary)] mb-6"
    >
      {CONSTANTS.Event_Announcements}
    </h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      {
        eventArticles.map((article) => (
          <article class="group">
            <a href={`/articles/${article.id}`} class="block">
              <div class="aspect-video overflow-hidden rounded-lg mb-3">
                <img
                  src={article.data.cover.src}
                  alt={article.data.covert_alt || article.data.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                  loading="lazy"
                />
              </div>
              <h3
                class="text-[color:var(--text-primary)] font-medium text-sm line-clamp-2 group-hover:text-[color:color-mix(in_oklab,var(--primary)_70%,var(--text-primary)_30%)] transition-colors"
              >
                {article.data.title}
              </h3>
            </a>
          </article>
        ))
      }
    </div>
  </div>
</section>
